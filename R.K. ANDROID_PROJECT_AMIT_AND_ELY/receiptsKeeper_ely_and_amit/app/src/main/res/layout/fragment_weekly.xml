<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.WeeklyFragment"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:weightSum="8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:weightSum="7"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"

                />
            <TextView
                android:layout_height="match_parent"
                android:textAlignment="viewStart"
                android:textColor="@color/receipts"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="תורים"
                android:background="@drawable/input_bg"
                android:backgroundTint="@color/queues"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"

                />
            <TextView
                android:layout_height="match_parent"
                android:textColor="@color/queues"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="קבלות"
                android:background="@drawable/input_bg"
                android:backgroundTint="@color/receipts"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:text="יומן שבועי"
                android:paddingHorizontal="16dp"
                android:textSize="24sp"

                />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:weightSum="4"
                >

                <TextView
                    android:paddingHorizontal="16dp"
                    android:id="@+id/textView_day_minus3_date"
                    android:layout_height="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:gravity="right"
                    android:weightSum="3"
                    android:layout_weight="3"
                    >


                    <TextView
                        android:id="@+id/textView_day_minus3_count"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/queues"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:text="@string/zero"

                        />
                    <TextView
                        android:id="@+id/textView_day_minus3_count_receipts"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/receipts"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:text="@string/zero"

                        />

                    <TextView
                        android:id="@+id/textView_day_minus3"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:weightSum="4"
                >
                <TextView
