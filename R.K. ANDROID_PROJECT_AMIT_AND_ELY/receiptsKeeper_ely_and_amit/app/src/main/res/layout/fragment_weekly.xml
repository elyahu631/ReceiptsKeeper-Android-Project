            android:layout_height="0dp"
            android:layout_weight="1"

            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"

            >
            <LinearLayout
