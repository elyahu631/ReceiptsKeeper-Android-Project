                        />

                    <TextView
                        android:id="@+id/textView_day_plus2"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        />
                </LinearLayout>
            </LinearLayout>
